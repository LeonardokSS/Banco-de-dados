create database LojaProcedure

use LojaProcedure

create table Estoque(
Id int primary key identity(1,1),
Quantidade int,
nomeProduto varchar(30),
Valor_Antigo int(20),
Valor_Novo int
);
insert into Estoque values(2,'Baba'),(30,'Hamborgures'),(29,'Lixo')

select * from Estoque

